<body>
    <div class="container headcenter">
        <div class="row">
            <div class="col-12 headcenter">
                <h1><b><i>Perfect Pizza</i></b></h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12 {{show}}">
    
                <h2>Shopping Cart </h2>
                <table class="center">
                    <tr>
                        <th></th>
                        <th>Add</th>
                        <th>Sub</th>
                        <th>qty</th>
                        <th>price</th>
                    </tr>
                    <tr>
                        <td>Small</td>
                        <form action="/small" method="post">
                        <td>
                            <input type="submit" name="small" value="+">
                            
                        </td>
                        <td>
                                <input type="submit" name="small" value="-">
                                
                        </td>
                        </form>
                        <td class="smallQty">{{smallQty}}</td>
                        <td class="smallTotal">R{{smallTotal}}</td>

                    </tr>
                    <tr>
                        <td>Medium</td>
                        <form action="/medium" method="post">
                        <td>
                            <input type="submit" name="medium" value="+">
                        </td>
                        <td>
                            <input type="submit" name="medium" value="-">
                        </td>
                        </form>
                        <td class="mediumQty">{{mediumQty}}</td>
                        <td class="mediumTotal">R{{mediumTotal}}</td>
                    </tr>
                    <tr>
                        <td>Large</td>
                        <form action="/large" method="post" >
                        <td>
                           <input type="submit" name="large" value="+"> 
                        </td>
                        <td>
                            <input type="submit" name="large" value="-">
                        </td>
                        </form>
                        <td class="largeQty">{{largeQty}}</td>
                        <td class="largeTotal">R{{largeTotal}}</td>

                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td>Total</td>
                        <td></td>
                        <td class="total">R{{total}}</td>
                    </tr>
                </table>
                
                <div class="message">{{message}}
                </div>
                
                <div>
                    <a href="order">
                    <button  type="submit" class="paymBtn">order</button></a>
                    </div>
                   
            </div>
        </div>
        <div class="row">
            <div class="col-4 small">
                <h2>Small Pizza</h2>
                <img src="small.jpg" alt="pizza" width="93%" height="auto">
                <h3>R22.50</h3>
                <div class="content">
                    small pizza with 3 toppings
                    1 meet topping
                    3 or less other topping
                    <div>mmmmmmmmhhh Nice!!!!!!</div>
                    <div>
                        <form action="/small" method="post">
                        <input type="submit" name="small" value="Buy">
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-4 medium">
                <h2>Medium Pizza</h2>
                <img src="medium.jpg" alt="pizza" width="93%" height="auto">
                <h3>R60.50</h3>
                <div class="content">
                    medium margeritha pizza with 3 toppings max 2 or less meat topping. 3 or less other
                    toppings.
                    <div>
                        <form action="/medium" method="post">
                        <input type="submit" name="medium" value="Buy">
                        </form>
                    </div>
                </div>

            </div>
            <div class="col-4 large">
                <h2>Large Pizza</h2>
                <img src="large.jpg" alt="pizza" width="93%" height="auto">
                <h3>R120.50</h3>
                <div class="content">
                    large margeritha pizza with 3 toppings max. 3 meat toppings max. 3 or less other topping.
                    <div>
                        <form action="/large" method="post">
                        <input type="submit" name="large" value="Buy">
                        </form>
                    </div>
                </div>


            </div>
        </div>
        <div class="row">
            <div class="col-12 contact">
                <div class="content">
                    <h2>contact Details</h2>
                    <div><img src="phone.png" width="12em">:012 345 6789</div>
                    <div><img src="email.jpg" width="12em">:infor@perfectpizza.co.za</div>
                    <a href="https://regionald.github.io/perfector-pizza/"
                        target="_blank"><i>www.perfectpizza.co.za</i></a>
                    <!--div><object data="extNote.txt"></object></div-->

                </div>
            </div>
        </div>
    </div>
</body>

</html>