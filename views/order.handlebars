<body>

    <div class="container headcenter">

        <div class="row">
            <div class="col-12 headcenter">
                <h1><b><i>Perfect Pizza</i></b></h1>
            </div>
        </div>

        <div>

            <table class="center">
                <tr>
                    <th>orderId</th>
                    <th>smallQty</th>
                    <th>mediumQty</th>
                    <th>largeQty</th>
                    <th>status</th>
                    <th>Total</th>
                </tr>
                {{#each orders}}

                <tr>

                    <td>{{id}}</td>
                    <td>{{smallQty}}</td>
                    <td>{{mediumQty}}</td>
                    <td>{{largeQty}}</td>
                    <td>{{status}}</td>
                    <td>R{{total}}</td>
                    <td>
                        <form action="/pay/{{id}}" method="post">
                             <input type="number" step="0.01" name="amount" class="cash {{newStyle}}" placeholder="Amount e.g R50.55" id="mes"
                        required>
                        <input type="submit" name="pay" value="pay">
                        </form>
                    </td>

                </tr>
                {{/each}}

            </table>

        </div>

    </div>
</body>